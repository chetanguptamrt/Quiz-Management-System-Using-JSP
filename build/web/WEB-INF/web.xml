        <servlet-class>com.servlet.UserLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetVerifiedUserServlet</servlet-name>
        <servlet-class>com.servlet.GetVerifiedUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateQuizSevlet</servlet-name>
        <servlet-class>com.servlet.CreateQuizSevlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteQuizServlet</servlet-name>
        <servlet-class>com.servlet.DeleteQuizServlet</servlet-class>
